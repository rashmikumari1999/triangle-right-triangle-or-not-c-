#include <iostream>
#include<conio.h>
using namespace std;

int main()
{
    int a,b,c;
    cout<<"enter the value of a,b,c";
    cin>>a>>b>>c;
    if(a*a==b*b+c*c||b*b==c*c+a*a||c*c==a*a+b*b)
    {
        cout<<"the triangle is right triangle";
    }
    else
    {
    cout<<"the triangle is a scalen angle/n";
    }
}
